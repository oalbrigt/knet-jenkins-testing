#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ([2.69])
AC_INIT([knet-jenkins-testing], [0.1], [fabbione@kronosnet.org])
AC_USE_SYSTEM_EXTENSIONS
AM_INIT_AUTOMAKE([1.11.1 dist-bzip2 dist-xz color-tests -Wno-portability subdir-objects])
LT_PREREQ([2.2.6])
LT_INIT

AC_CONFIG_MACRO_DIR([m4])
AC_CONFIG_SRCDIR([main.c])
AC_CONFIG_HEADERS([config.h])

AC_CANONICAL_HOST

AC_PROG_LIBTOOL
AC_PROG_CC
AC_PROG_MAKE_SET
AC_CHECK_PROGS([VALGRIND_EXEC], [valgrind])
AM_CONDITIONAL([DO_MEMCHECK], [test x$VALGRIND_EXEC != "x"])

AC_LANG([C])

AC_CONFIG_FILES([Makefile])
AC_OUTPUT
